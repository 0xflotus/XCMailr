<?xml version="1.0" encoding="UTF-8"?>
<testcase xmlns="http://xlt.xceptance.com/xlt-script/2" version="6">
  <description>Test login with  invalid username and invalid password

# Setup and preparation

- Start session, open homepage and delete all visible cookies
- Click login link in the header and go to the login page

# Scope

- Try to login with a invalid username and invalid password
- Validate page title 
- Validate present error message element</description>
  <codecomment>-----------------------------------------------</codecomment>
  <codecomment># Setup

- Start session</codecomment>
  <codecomment>-----------------------------------------------</codecomment>
  <module name="modules.helper.MHelper_Random_createEMail">
    <parameter name="email_varDynamic" value="email_varDynamic"/>
  </module>
  <module name="modules.helper.MHelper_Random_createPassword">
    <parameter name="pwd_varDynamic" value="password_varDynamic"/>
  </module>
  <module name="modules.helper.global.FHelper_Session_flowToStartSession"/>
  <codecomment>-----------------------------------------------</codecomment>
  <codecomment># Scope</codecomment>
  <codecomment>enter invalid username and invalid password</codecomment>
  <codecomment>-----------------------------------------------</codecomment>
  <action name="GoToSignIn"/>
  <module name="modules.global.headernav.MGlobal_Header_clickSignIn"/>
  <codecomment>validate - Layout</codecomment>
  <module name="modules.global.headernav.VGlobal_validatePageTitle">
    <parameter name="page_title" value="${title_login}"/>
  </module>
  <action name="EnterLoginDataAndClickLoginButton"/>
  <module name="modules.pages.account.login.MAccount_Login_enterClickUserLoginData">
    <parameter name="username" value="${email_varDynamic}"/>
    <parameter name="password" value="${password_varDynamic}"/>
  </module>
  <codecomment>validate - error msg. box</codecomment>
  <module name="modules.pages.account.login.VAccount_Login_validateErrorMsgNoMatch"/>
</testcase>