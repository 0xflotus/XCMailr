<?xml version="1.0" encoding="UTF-8"?>
<testcase xmlns="http://xlt.xceptance.com/xlt-script/2" version="6" junit-test="true">
  <description>add and remove e-mail adress

# Setup and preparation 

- Start session, open homepage and delete all visible cookies
- create user

# Scope of test</description>
  <codecomment># Setup

- Generate email
- Generate password
- Start session</codecomment>
  <codecomment>e-mail (extern)</codecomment>
  <module name="modules.helper.external.FHelper_getEmailAddressFromExternal">
    <parameter name="email_varName" value="email_varDynamic"/>
  </module>
  <codecomment>3x Domain local Part</codecomment>
  <module name="modules.helper.MHelper_Random_addRandomness">
    <parameter name="inputString" value="${defaultdomainLocalPart}"/>
    <parameter name="returnValue_varDynamic" value="domainLocalPart01_varDynamic"/>
  </module>
  <module name="modules.helper.MHelper_Random_addRandomness">
    <parameter name="inputString" value="${defaultdomainLocalPart}"/>
    <parameter name="returnValue_varDynamic" value="domainLocalPart02_varDynamic"/>
  </module>
  <module name="modules.helper.MHelper_Random_addRandomness">
    <parameter name="inputString" value="${defaultdomainLocalPart}"/>
    <parameter name="returnValue_varDynamic" value="domainLocalPart03_varDynamic"/>
  </module>
  <codecomment># Setup

- Start session</codecomment>
  <module name="modules.helper.global.FHelper_Session_flowToStartSession"/>
  <codecomment>create test account</codecomment>
  <module name="modules.helper.global.FHelper_Register_createAccount">
    <parameter name="email" value="${email_varDynamic}"/>
    <parameter name="userPassword_varDynamic" value="password_varDynamic"/>
  </module>
  <module name="modules.helper.global.FHelper_Session_flowToStartSession"/>
  <action name="GoToSignIn"/>
  <module name="modules.global.headernav.MGlobal_Header_clickSignIn"/>
  <action name="GoToAccount"/>
  <module name="modules.pages.account.login.MAccount_Login_enterClickUserLoginData">
    <parameter name="username" value="${email_varDynamic}"/>
    <parameter name="password" value="${password_varDynamic}"/>
  </module>
  <action name="GoToMyEmailAdresses"/>
  <module name="modules.global.headernav.MGlobal_Header_clickMyEmailAdresses"/>
  <codecomment>add e-mail</codecomment>
  <module name="modules.pages.mail.FMail_Menu_addEmail">
    <parameter name="domainLocalPart" value="a-${domainLocalPart01_varDynamic}"/>
    <parameter name="domainHostPart" value="${defaultDomainPart}"/>
    <parameter name="validUntilDate" value=""/>
  </module>
  <module name="modules.pages.mail.FMail_Menu_addEmail">
    <parameter name="domainLocalPart" value="b-${domainLocalPart02_varDynamic}"/>
    <parameter name="domainHostPart" value="${defaultDomainPart}"/>
    <parameter name="validUntilDate" value=""/>
  </module>
  <module name="modules.pages.mail.FMail_Menu_addEmail">
    <parameter name="domainLocalPart" value="c-${domainLocalPart03_varDynamic}"/>
    <parameter name="domainHostPart" value="${defaultDomainPart}"/>
    <parameter name="validUntilDate" value=""/>
  </module>
  <codecomment># Scope</codecomment>
  <codecomment>sorting - e-mail</codecomment>
  <action name="changeSortingEMail"/>
  <module name="modules.pages.mail.sorting.MMail_Sorting_clickEMail"/>
  <codecomment>validate</codecomment>
  <module name="modules.pages.mail.VMail_Table_validateFirstElement">
    <parameter name="nominalValue" value="c-${domainLocalPart03_varDynamic}@${defaultDomainPart}"/>
  </module>
  <module name="modules.pages.mail.VMail_Table_validateLastElement">
    <parameter name="nominalValue" value="a-${domainLocalPart01_varDynamic}@${defaultDomainPart}"/>
  </module>
  <codecomment>sorting - status</codecomment>
  <codecomment>set status of the second element to disable</codecomment>
  <action name="checkBoxEmail"/>
  <module name="modules.pages.mail.MMail_Row_clickSelectEMail">
    <parameter name="row" value="3"/>
  </module>
  <module name="modules.pages.mail.MMail_Menu_setStatusInactive"/>
  <action name="changeSortingStatus"/>
  <module name="modules.pages.mail.sorting.MMail_Sorting_clickStatus"/>
  <codecomment>validate</codecomment>
  <module name="modules.pages.mail.VMail_Table_validateFirstElement">
    <parameter name="nominalValue" value="b-${domainLocalPart02_varDynamic}@${defaultDomainPart}"/>
  </module>
  <module name="modules.pages.mail.VMail_Table_validateLastElement">
    <parameter name="nominalValue" value="c-${domainLocalPart03_varDynamic}@${defaultDomainPart}"/>
  </module>
  <action name="logout"/>
  <module name="modules.global.headernav.MGlobal_Header_clickSignOut"/>
</testcase>