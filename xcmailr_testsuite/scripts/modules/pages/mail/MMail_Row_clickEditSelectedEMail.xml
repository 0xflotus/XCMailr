<?xml version="1.0" encoding="UTF-8"?>
<scriptmodule xmlns="http://xlt.xceptance.com/xlt-script/2" version="6">
  <description>Click the edit element at the selected table row.</description>
  <parameter name="row"/>
  <action name="openEditDialog"/>
  <command name="click" target="css=#table-mailbox-overview tr:nth-of-type(@{row}) a.btn-link-edit">
    <comment>select first element</comment>
  </command>
  <command name="waitForElementPresent" target="css=.modal-dialog"/>
</scriptmodule>